<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="online_bank_statement_provider_form">
        <field name="name">online.bank.statement.provider.form</field>
        <field name="model">online.bank.statement.provider</field>
        <field
            name="inherit_id"
            ref="account_statement_import_online.online_bank_statement_provider_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='main']" position="inside">
                <group
                    name="ponto"
                    string="Ponto Config"
                    attrs="{'invisible':[('service','!=','ponto')]}"
                >
                    <field name="username" string="Login" />
                    <field name="password" string="Secret Key" />
                    <field name="ponto_date_field" />
                </group>
                 <!-- New Fields for Manual Bank Account Configuration -->
                <group name="manual_account_config" string="Manual Bank Account">
                    <field name="use_manual_account" string="Use Manual Bank Account" />
                    <field name="manual_bank_account" string="Bank Account"
                        attrs="{'readonly':[('use_manual_account','=',False)]}" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
